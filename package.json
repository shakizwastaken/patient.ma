{
  "name": "@acme/root",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "web:dev": "pnpm --filter @acme/web dev",
    "web:build": "pnpm --filter @acme/web build",
    "web:start": "pnpm --filter @acme/web start",
    "web:db:generate": "pnpm --filter @acme/web db:generate",
    "web:db:migrate": "pnpm --filter @acme/web db:migrate",
    "push": "pnpm --filter @acme/web push",
    "web:db:studio": "pnpm --filter @acme/web studio",
    "admin:dev": "pnpm --filter @acme/admin dev",
    "admin:build": "pnpm --filter @acme/admin build",
    "admin:start": "pnpm --filter @acme/admin start",
    "admin:typecheck": "pnpm --filter @acme/admin typecheck"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2"
  }
}
